# ConSERVERtive VPN - Environment Configuration Template
# Copy this file to .env.local for local development or .env for production

# Clerk Authentication
# Get these from: https://dashboard.clerk.com/ -> Your App -> API Keys
# For local development, use TEST keys (pk_test_... and sk_test_...)
# For production, use LIVE keys (pk_live_... and sk_live_...)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_or_pk_live_YOUR_CLERK_PUBLISHABLE_KEY
CLERK_SECRET_KEY=sk_test_or_sk_live_YOUR_CLERK_SECRET_KEY

# Stripe Payment Processing
# Get these from: https://dashboard.stripe.com/ -> Developers -> API Keys
# For local development, use TEST keys (pk_test_... and sk_test_...)
# For production, use LIVE keys (pk_live_... and sk_live_...)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_or_pk_live_YOUR_STRIPE_PUBLISHABLE_KEY
STRIPE_SECRET_KEY=sk_test_or_sk_live_YOUR_STRIPE_SECRET_KEY

# API Configuration
# For local development: http://localhost:3001
# For production: https://api.conservertive.co
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_BACKEND_URL=http://localhost:3001

# Application Configuration
# For local development: http://localhost:3000
# For production: https://conservertive.co
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Database Configuration
# For local development: file:./database.sqlite
# For production: postgresql://username:password@host:port/database
DATABASE_URL=file:./database.sqlite
